{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug at the promted directory",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/${input:projectDirectory}/bin/main",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}/${input:projectDirectory}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build promted directory",
      "miDebuggerPath": "/usr/bin/gdb"
    }
  ],
  "inputs": [
    {
      "id": "projectName",
      "type": "promptString",
      "description": "Enter project directory (e.g., 1_stack/dynamic_array_stack )",
      "default": "1_stack/dynamic_array_stack",
    }
  ]
}
