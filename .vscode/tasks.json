{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build promted directory",
            "type": "shell",
            "command": "make",
            "args": [
                "DEBUG=1"
            ],
            "options": {
                "cwd": "${workspaceFolder}/${input:projectDirectory}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/${input:projectDirectory}"
            },
            "group": {
                "kind": "build"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "projectDirectory",
            "type": "promptString",
            "description": "Enter project directory (e.g., 1_stack/dynamic_array_stack )",
            "default": "1_stack/dynamic_array_stack"
        }
    ]
}